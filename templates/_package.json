{
  "name": "<% if (control.repository) { -%><%= account.packagist %><% } else { -%><%= owner.canonical %><% } -%>-<%= project.name %>",
  "description": "<%= project.description %>",
  "version": "0.0.1",
  "keywords": [<% for (var i = 0; i < project.keywords.length; i++) { %>
    "<%= project.keywords[i] %>"<% if (i < project.keywords.length - 1) { %>,<% } -%><% } -%>

  ],
<% if (project.homepage) { -%>
  "homepage": "<%= project.homepage %>",
<% }
if (project.license != '') { -%>
  "license": "<%= project.license %>",
<% }
if (control.repository) { -%>
  "bugs": "<%= repository.homepage %>/issues",
<% } -%>
  "author": {
    "name": "<%= owner.name %>"<% if (owner.email) { -%>,

    "email": "<%= owner.email %>"<% } -%><% if (owner.homepage) { -%>,

    "url": "<%= owner.homepage %>"
  },
<% } else { -%>

  },
<% } -%>
  "dependencies": {},
  "devDependencies": {
<% if (control.taskRunner === 'Grunt') { -%>
    "grunt": "~0.4.0",
<% if (project.type === 'project') { -%>
    "grunt-browser-sync": "^2.0.0",
<% } -%>
    "grunt-composer": "~0.4.0",
<% if (project.type === 'project' && !control.homestead) { -%>
    "grunt-php": "~1.5.1",
<% } -%>
    "grunt-php-cs-fixer": "~0.0.9",
    "grunt-phpcpd": "~0.1.0",
    "grunt-phpcs": "~0.2.0",
    "grunt-phplint": "~0.0.5",
    "grunt-phpmd": "~0.1.0",
    "grunt-phpunit": "~0.3.0",
    "jit-grunt": "~0.10.0",
    "load-grunt-configs": "~1.0.0",
    "time-grunt": "^1.2.0"
<% } else if (control.taskRunner == 'Gulp') {
if (project.type === 'project') { -%>
    "browser-sync": "^2.12.0",
<% } -%>
    "gulp": "^3.9.0",
    "gulp-composer": "^0.4.0",
<% if (project.type === 'project' && !control.homestead) { -%>
    "gulp-connect-php": "~0.0.7",
<% } -%>
    "gulp-phpcpd": "^1.0.0",
    "gulp-phpcs": "^1.1.0",
    "gulp-phplint": "~0.1.0",
    "gulp-phpmd-plugin": "^1.1.4",
    "gulp-phpunit": "~0.14.0",
    "run-sequence": "^1.2.1"
<% } -%>
  }
}
