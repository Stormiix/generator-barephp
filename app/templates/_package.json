{
  "name": "<%= underscoreString.slugify(project.name) %>",
<% if (project.desc) { -%>
  "description": "<%= project.desc %>",
<% } -%>
<% if (project.keywords) { -%>
  "keywords": [<% for (var i = 0; i < project.keywords.length; i++) { %>
    "<%= project.keywords[i] %>"<% if (i < project.keywords.length - 1) { %>,<% } -%>
    <% } -%>

  ],
<% } -%>
<% if (project.homepage) { -%>
  "homepage": "<%= project.homepage %>",
<% } -%>
  "author": {
    "name": "<%= owner.name %>"<% if (owner.email) { -%>,

    "email": "<%= owner.email %>"<% } -%><% if (owner.homepage) { -%>,

    "url": "<%= owner.homepage %>"
    <% } -%>
  },
  "dependencies": {
  },
  "devDependencies": {
    "grunt": "~0.4.5",
    "time-grunt": "~1.2.2",
    "load-grunt-tasks": "~0.6.0",
    "grunt-phplint": "~0.0.5",
    "grunt-phpunit": "~0.3.5",
    "grunt-phpcs": "~0.2.3",
    "grunt-phpmd": "~0.1.1",
    "grunt-phpcpd": "~0.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:<%= project.name %>.git"
  }
}
